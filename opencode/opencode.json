{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "mcp": {
    "context7": {
      "type": "remote",
      "enabled": false,
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "ref": {
      "type": "remote",
      "enabled": true,
      "url": "https://api.ref.tools/mcp?apiKey={env:REF_API_KEY}"
    },
    "sequentialthinking": {
      "type": "local",
      "enabled": true,
      "command": ["docker", "run", "--rm", "-i", "mcp/sequentialthinking"]
    },
    "memory": {
      "type": "local",
      "enabled": false,
      "command": ["docker", "run", "-i", "-v", "claude-memory:/app/dist", "--rm", "mcp/memory"]
    },
    "playwright": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "--isolated", "@playwright/mcp@latest"]
    },
    "github": {
      "type": "remote",
      "enabled": false,
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "cloudflare": {
      "type": "remote",
      "enabled": true,
      "url": "https://docs.mcp.cloudflare.com/mcp"
    },
    "mui": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "@mui/mcp@latest"]
    }
  }
}
